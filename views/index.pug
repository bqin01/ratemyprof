doctype html
html 
  head 
    link(rel='stylesheet', href='/styles/index.css', type='text/css')
  body
    div.wide-container#filler(style = "background-color: #AAFF88;")
    div#info-box
      h1 Rate My Professors Querying 
      p 
        | The purpose of this application is to allow students (and all others interested) to more easily access the information on
        |
        a(href = "https://ratemyprofessors.com") ratemyprofessors.com
        | 
        | in a manner that is more meaningful to students.
    svg(style='width: 100%; height: 100%;')
      line(x1='150',y1='500',x2='1150',y2='350',style='stroke:#AAAAFFFF; stroke-width: 550px')
      line(x1='150',y1='430',x2='1150',y2='450',style='stroke:#00000044; stroke-width: 550px')
    div#search-options
      h1 Select one or more query options...
      form(action = "/query", method = "get")
        div#name-queries
          div.query
            label(for = "fname-prof") Professor's First Name
            input(type = "text", id = "fname", name = "fnameprof")
          div.query
            label(for = "lname") Professor's Last Name
            input(type = "text", id = "lname", name = "lnameprof")
        div.query
          label(for = "instit") Institution
          input(type = "text", id = "instit", name = "instit")
        div.query
          label(for = "depart") Department
          select(class = "form-control", id = "depart", name = "depart")
            option -
            option PLACE
            option HOLDER
        div#rating-queries
          div.query
            label(for = "quality") Min Quality (out of 5)
            select(class = "form-control", id = "quality", name = "quality")
              option -
              - var n = 50;
              while n >= 10
                if n%10 == 0
                  option= n/10 + ".0"
                else
                  option= n/10 
                - n -= 1;
          div.query
            label(for = "difficulty") Max Difficulty (out of 5)
            select(class = "form-control", id = "difficulty", name = "difficulty")
              option -
              - var n = 50;
              while n >= 10
                if n%10 == 0
                  option= n/10 + ".0"
                else
                  option= n/10 
                - n -= 1;
          div.query
            label(for = "takeagain") Min % Would Take Again
            select(class = "form-control", id = "takeagain", name = "takeagain")
              option -
              - var n = 100;
              while n >= 10
                option= n + "%"
                - n -= 10;
        div.boolean.centered
          label(for = "naenable") Include N/A Results?
          input(type = "checkbox", id = "naenable", name = "naenable")
          button(id = "query-button", value = "Query!") Query!
              
              
          
